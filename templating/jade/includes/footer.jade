mixin footer(activeFooter)
    footer.wrap-footer
        .container.pyramids.pyramids-right
            .row
                .col-xs-4
                    img(src="../../../img/home/footer/logo.png" alt="logo" class="logo-footer")
                    p.copyright 2015 &copy; Lawyer.
                    div
                        button.btn-footer
                            img(src="../../../img/home/footer/btn-fc.png" alt="facebook")
                        button.btn-footer
                            img(src="../../../img/home/footer/btn-g.png" alt="google")
                        button.btn-footer
                            img(src="../../../img/home/footer/btn-tw.png" alt="twitter")
                        button.btn-footer
                            img(src="../../../img/home/footer/btn-in.png" alt="inst")
                .col-xs-3
                    nav
                        h2.heading-nav Navigation
                        ul.navigations
                            if activeFooter == 'home'
                                li.lines-nav.lines-nav-active
                                    a.active-footer(href="home.html")
                                        i(class="fa fa-caret-right")
                                        |Home
                            else
                                li.lines-nav
                                    a(href="home.html")
                                        i(class="fa fa-caret-right")
                                        | Home
                            if activeFooter == 'about-us'
                                li.lines-nav.lines-nav-active
                                    a.active-footer(href="about-us.html")
                                        i(class="fa fa-caret-right")
                                        |About us
                            else
                                li.lines-nav
                                    a(href="about-us.html")
                                        i(class="fa fa-caret-right")
                                        | About us
                            if activeFooter == 'services'
                                li.lines-nav.lines-nav-active
                                    a.active-footer(href="services.html")
                                        i(class="fa fa-caret-right")
                                        |Services
                            else
                                li.lines-nav
                                    a(href="services.html")
                                        i(class="fa fa-caret-right")
                                        | Services
                            if activeFooter == 'testimonials'
                                li.lines-nav.lines-nav-active
                                    a.active-footer(href="testimonials.html")
                                        i(class="fa fa-caret-right")
                                        |Testimonial
                            else
                                li.lines-nav
                                    a(href="testimonials.html")
                                        i(class="fa fa-caret-right")
                                        | Testimonial
                            if activeFooter == 'blog'
                                li.lines-nav.lines-nav-active
                                    a.active-footer(href="blog.html")
                                        i(class="fa fa-caret-right")
                                        |Blog
                            else
                                li.lines-nav
                                    a(href="blog.html")
                                        i(class="fa fa-caret-right")
                                        | Blog
                            if activeFooter == 'contact-us'
                                li.lines-nav.lines-nav-active
                                    a.active-footer(href="contact-us.html")
                                        i(class="fa fa-caret-right")
                                        |Contact us
                            else
                                li
                                    a(href="contact-us.html")
                                        i(class="fa fa-caret-right")
                                        | Contact us
                .col-xs-5.contact-us.pr-0
                    h2.head-form Quick Contact Us
                    form.f-footer
                        ul.row.mb-0
                            li.col-xs-6.pr-0
                                label(class="sr-only" for="name-f")
                                input(type="text" class="form-control input-footer" id="name-f" placeholder="Name *")
                            li.col-xs-6.pl-0
                                label(class="sr-only" for="email-f")
                                input(type="email" class="form-control input-footer" id="email-f" placeholder="Email *")
                        textarea(class="form-control textarea" rows="4"  placeholder="Comment *")
                        button(type="submit" class="btn  btn-submit margin-submit-footer") Submit now